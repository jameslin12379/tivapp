<% include ../partials/header %>

    <div class="container pd-tb-50">
    <div>
        <div class="flex jc-center mb-15"><img src="<%= results[0][0].imageurl %>" alt="" class="width-100 height-100 border-radius" /></div>
            <h4 class="text-center mb-15"><%= results[0][0].name %></h4>
            <div class="flex jc-center mb-15">
                <a href="/topics/<%= results[0][0].id %>" class="mr-15"><span id="postscount"><%= results[2][0].postscount %></span> Posts</a>
                <a href="/topics/<%= results[0][0].id %>/followers"><span id="followerscount"><%= results[3][0].followerscount %></span> Followers</a>
            </div>
            <p class="pd-lr-20p m-15"><%= results[0][0].description %></p>

            <% if (req.isAuthenticated()) { %>
            <div class="flex jc-center">
            <button id="followunfollow" type="button" class="btn btn-outline-primary">
                <% if (result[0].status === 0) { %>
                Follow
                <% } else { %>
                Unfollow
                <% } %>
            </button>
            </div>
            <% } %>
    </div>
        <div id="container">
            <% for(var i=0; i < results[1].length; i++) { %>
            <div class="mb-100 container-item">
                <div class="mb-15">
                    <% if (results[1][i].posttype === 1) { %>
                    <a href="/posts/<%= results[1][i].id %>"><%= results[1][i].name %></a>
                    <% } else { %>
                    <a href="/posts/<%= results[1][i].id %>">/posts/<%= results[1][i].id %></a>
                    <% } %>
                </div>

                <% if (results[1][i].posttype === 1) { %>
                <p class="mb-15"><%= results[1][i].description %></p>
                <% } else if (results[1][i].posttype === 2) { %>
                <div class="mb-15 flex jc-center"><img src="<%= results[1][i].imageurl %>" class="width-400 height-400" /></div>
                <% } else { %>
                <div class="mb-15 flex jc-center">
                    <video controls controlsList="nodownload" webkitallowfullscreen mozallowfullscreen allowfullscreen class="width-50p height-200">
                        <source src="<%= results[1][i].videourl %>" type="video/mp4">
                    </video>
                </div>
                <% } %>
                <div class="flex">
                    <div class="mr-15">
                        <a href="/users/<%= results[1][i].userid %>"><img src="<%= results[1][i].userimageurl %>" alt="" class="width-70 height-70 border-radius" /></a>
                    </div>
                    <div>
                        <div><a href="/users/<%= results[1][i].userid %>"><%= results[1][i].username %></a></div>
                        <div><a href="/topics/<%= results[1][i].topicid %>"><%= results[1][i].topicname %></a></div>
                        <div><%= moment(results[1][i].datecreated).format('LLL') %></div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <div id="loadMore">
        </div>
        </div>


<script src="/javascripts/topicloadmoreposts.js"></script>
<% if (req.isAuthenticated()) { %>
<script src="/javascripts/topicfollowunfollow.js"></script>
<% } %>

<% include ../partials/footer %>


