<% include ../partials/header %>

<div id="et-main-area">
    <div id="main-content">
        <article id="post-209034" class="post-209034 page type-page status-publish hentry">
            <div class="entry-content">
                <div id="et-boc" class="et-boc">
                    <div class="et_builder_inner_content et_pb_gutters3">
                        <div class="et_pb_section et_pb_section_1 et_section_specialty">
                            <div class="et_pb_row">
                                <div class="et_pb_column et_pb_column_1_3 et_pb_column_3    et_pb_css_mix_blend_mode_passthrough et_pb_column_single w-100 ptb-0">
                                    <% if (alert.length > 0) { %>
                                    <div class="et_pb_newsletter_result et_pb_newsletter_error show text-center mb-1 fs-18">
                                        <%= alert %>
                                    </div>
                                    <% } %>

                                    <div class="et_pb_module et_pb_blurb et_pb_blurb_2 et_pb_bg_layout_light  et_pb_text_align_left  et_pb_blurb_position_left box-shadow-none" style="">
                                        <div class="et_pb_blurb_content">
                                            <div class="et_pb_blurb_container">
                                                <a href="/posts/<%= results[0][0].id %>"><h4 class="et_pb_module_header"><%= results[0][0].name %></h4></a>

                                                <div class="et_pb_blurb_description">
                                                    <p><%= results[0][0].description %></p>
                                                    <img class=" "src="<%= results[0][0].imageurl %>">
                                                    <p><strong><%= moment(results[0][0].datecreated).format('LLL') %></strong></p>
                                                    <div class="flex">
                                                        <a class="brown mr-1" href="/users/<%= results[0][0].userid %>"><p><%= results[0][0].username %></p></a>
                                                        <a class="brown mr-1" href="/topics/<%= results[0][0].topicid %>"><p><%= results[0][0].topicname %></p></a>
                                                        <span class=" brown mr-1"><p><span id="commentscount"><%= results[2][0].commentscount %></span> Comments</p></span>
                                                        <span class=" brown mr-1"><p><span id="upvotescount"><%= results[3][0].upvotescount %></span> Likes</p></span>
                                                        <% if (req.isAuthenticated()) { %>
                                                            <button id="upvoteunupvote" class="brown fs-100p bd-none mr-1">
                                                                <% if (result[0].status === 0) { %>
                                                                Like
                                                                <% } else { %>
                                                                Liked
                                                                <% } %>
                                                            </button>
                                                        <% } %>
                                                        <% if (req.user === undefined) { %>
                                                        <% } else if (req.user.id !== results[0][0].userid) { %>
                                                        <% } else { %>
                                                            <a class="brown mr-1" href="/posts/<%= results[0][0].id %>/edit">Edit</a>
                                                                        <form action="/posts/<%= results[0][0].id %>?_method=DELETE" method="post">
                                                                            <button type="submit" class="brown fs-100p bd-none">Delete</button>
                                                                        </form>
                                                        <% } %>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                    <% if (req.isAuthenticated()) { %>
                                    <div class="et_pb_module et_pb_blurb et_pb_blurb_2 et_pb_bg_layout_light  et_pb_text_align_left  et_pb_blurb_position_left mb-30 box-shadow-none" style="">
                                        <div class="et_pb_blurb_content">

                                            <div class="et_pb_blurb_container displayb">
                                        <form action="/comments" method="post" id="commentform">
                                            <div id="emptyerror" class="et_pb_newsletter_result et_pb_newsletter_error show text-center mb-1 fs-18 red hidden commentformerrors">
                                                Empty description
                                            </div>
                                            <div id="lengtherror" class="et_pb_newsletter_result et_pb_newsletter_error show text-center mb-1 fs-18 red hidden commentformerrors">
                                                Description must be between 5-300 characters.
                                            </div>
                                        <div class="et_pb_newsletter_fields">
                                            <p class="et_pb_newsletter_field et_pb_contact_field_last">
                                                <textarea id="commentformtextarea" class="input width-100p pd-20 fs-20" placeholder="Description" name="description" rows="5" required></textarea>
                                            </p>
                                            <button class="submit-button floatr" type="submit" data-icon="">Comment</button>
                                        </div>
                                    </form>
                                    </div>
                                        </div>
                                    </div>
                                    <% } %>



                                    <div id="container">
                                            <% for(var i=0; i < results[1].length; i++) { %>
                                            <div class="et_pb_module et_pb_blurb et_pb_blurb_2 et_pb_bg_layout_light  et_pb_text_align_left  et_pb_blurb_position_left mb-30 box-shadow-none container-item" style="">
                                                <div class="et_pb_blurb_content">

                                                    <div class="et_pb_blurb_container">
                                                        <a href="/comments/<%= results[1][i].id %>"><h4 class="et_pb_module_header"><%= results[1][i].description %></h4></a>
                                                        <div class="et_pb_blurb_description">

                                                            <a href="/users/<%= results[1][i].userid %>"><h4 class="et_pb_module_header"><%= results[1][i].username %></h4></a>
                                                            <p><strong><%= moment(results[1][i].datecreated).format('LLL') %></strong></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                    </div>

                                        <div id="loadMore">
                                        </div>





                                </div>
                            </div>

                        </div>

                    </div>

                </div>
            </div> </div>
    </article>
</div>

</div>


<script src="/javascripts/postloadmorecomments.js"></script>


<% if (req.isAuthenticated()) { %>
<script src="/javascripts/postcreatecomment.js"></script>
<script src="/javascripts/postupvoteunupvote.js"></script>

<% } %>


