<% include ../partials/header %>


<div class="container pd-tb-50">
    <% if (alert.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <%= alert %>
    </div>
    <% } %>
    <div class="mb-30">
        <div class="flex jc-center mb-15"><img src="<%= results[0][0].imageurl %>" alt="" class="width-100 height-100 border-radius" /></div>
        <h4 class="text-center mb-15"><%= results[0][0].username %></h4>
        <div class="other mb-15">
            <div class="text-center mb-15"><a href="/users/<%= results[0][0].id %>"><%= results[2][0].postscount %> Posts</a></div>
            <div class="text-center mb-15"><a href="/users/<%= results[0][0].id %>/following"><%= results[3][0].followingcount %> Following</a></div>
            <div class="text-center mb-15"><a href="/users/<%= results[0][0].id %>/followers"><%= results[4][0].followerscount %> Followers</a></div>
            <div class="text-center mb-15"><a href="/users/<%= results[0][0].id %>/topics"><%= results[5][0].topicscount %> Topics</a></div>
            <div class="text-center mb-15"><a href="/users/<%= results[0][0].id %>/comments"><span id="commentscount"><%= results[6][0].commentscount %></span> Comments</a></div>
            <div class="text-center"><a href="/users/<%= results[0][0].id %>/likes"><%= results[7][0].likescount %> Likes</a></div>
        </div>
        <p class="text-center">Joined <%= moment(results[0][0].datecreated).format('LLL') %></p>
        <p class="pd-lr-20p text-center m-15"><%= results[0][0].description %></p>
    </div>
    <div id="container">
        <% for(var i=0; i < results[1].length; i++) { %>
        <div class="flex mb-30 container-item">
            <div class="mr-15">
                <a href="/users/<%= results[1][i].userid %>"><img src="<%= results[1][i].imageurl %>" alt="" class="width-70 height-70 border-radius" /></a>
            </div>
            <div>
                <div><a href="/users/<%= results[1][i].userid %>"><%= results[1][i].username %></a></div>
                <div><a href="/comments/<%= results[1][i].id %>"><%= results[1][i].description %></a></div>
                <div><%= moment(results[1][i].datecreated).format('LLL') %></div>
            </div>
        </div>
        <% } %>
    </div>
    <div id="loadMore">
    </div>
</div>

<script src="/javascripts/userloadmorecomments.js"></script>


<% include ../partials/footer %>



