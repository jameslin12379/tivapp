<% include ../partials/header %>

<div class="container pd-tb-50">
    <h3 class="text-center mb-15">Edit profile</h3>
    <form action="/users/<%= results[0].id %>?_method=PUT" method="post" enctype="multipart/form-data" class="form">
        <% if (errors.length > 0) { %>
        <% for(var i = 0; i < errors.length; i++) { %>
        <div class="alert alert-danger" role="alert">
            <%= errors[i].msg %>
        </div>
        <% } %>
        <% } %>
        <div class="form-group">
            <input class="form-control" type="email" placeholder="Email address" name="email" value="<%if (inputs.length > 0) { %><%= inputs[0].email %><% }else{ %><%= results[0].email %><% } %>" required autofocus>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" placeholder="Username" name="username" value="<%if (inputs.length > 0) { %><%= inputs[0].username %><% }else{ %><%= results[0].username %><% } %>" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" placeholder="Description" name="description" rows="5" required><%if (inputs.length > 0) { %><%= inputs[0].description %><% }else{ %><%= results[0].description %><% } %></textarea>
        </div>
        <div class="form-group">
            <input type="file" class="form-control-file" name="file" accept="image/*" required>
            <input type="hidden" name="imageurl" value="<%= results[0].imageurl %>">
        </div>
        <div class="flex jc-flexend">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>



    <% include ../partials/footer %>




